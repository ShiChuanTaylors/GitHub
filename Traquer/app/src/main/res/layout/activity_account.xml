<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.speed.traquer.app.Account">

    <TextView
        android:id="@+id/usr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="15sp"
        android:drawableLeft="@drawable/usr"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/mail"
        android:layout_below="@id/usr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="15sp"
        android:hint="@string/mail"
        android:drawableLeft="@drawable/mail"
        android:inputType="textEmailAddress"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/hpno"
        android:layout_below="@id/mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="15sp"
        android:hint="@string/hpno"
        android:drawableLeft="@drawable/hp"
        android:inputType="phone"
        android:drawablePadding="@dimen/activity_vertical_margin"
        android:visibility="invisible"/>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mail"
        android:id="@+id/listAccSetting"/>
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listAccSetting"
        android:id="@+id/listAccPwd"/>

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerInParent="true" />

</RelativeLayout>
