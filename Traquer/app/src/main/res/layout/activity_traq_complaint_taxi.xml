<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_rate_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="@dimen/login_margin"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rate_mode"
                    android:src="@drawable/ic_bus_small"/>
                <ImageButton
                    android:id="@+id/btn_rate_taxi"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/login_margin"
                    android:background="@color/TwitterBlue"
                    android:src="@drawable/ic_taxi_small"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/taxi_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taxi_comp"
                    android:layout_marginTop="@dimen/form_margin"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:textColor="@color/Black"
                    android:textSize="15sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_taxi_comp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:layout_marginLeft="@dimen/form_margin"
                        android:layout_marginRight="@dimen/form_margin"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:hint="@string/taxi_comp_hint"
                        android:textSize="14.5sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/search_taxi_comp"
                        android:layout_marginRight="@dimen/form_margin"
                        android:layout_centerInParent="true"
                        android:id="@+id/progressLoading"
                        android:visibility="invisible"/>

                </RelativeLayout>

                <!--<Spinner
                     android:id="@+id/spinner_comp"
                     android:hint="@string/bus_num1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>!-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/taxi_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/bus_num"
                    android:textColor="@color/Black"
                    android:textSize="15sp"/>
                <EditText
                    android:id="@+id/taxi_id"
                    android:layout_width="match_parent"
                    android:hint="@string/taxi_num"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textColor="@color/Black"
                    android:maxLength="8"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txt_taxi_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/taxi_driver"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/taxi_driver"
                    android:layout_width="match_parent"
                    android:hint="@string/driver_name"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txt_taxi_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/taxi_license"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/taxi_license"
                    android:layout_width="match_parent"
                    android:hint="@string/taxi_license"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/Black"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_from"
                        android:layout_marginRight="@dimen/form_margin"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:textColor="@color/Black"
                        android:hint="@string/loc_from"
                        android:textSize="15sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/search_from"
                        android:layout_marginRight="@dimen/form_margin"
                        android:layout_centerInParent="true"
                        android:id="@+id/progressLoadingFrom"
                        android:visibility="invisible"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/to"
                    android:text="@string/to"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/Black"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_to"
                        android:layout_marginRight="@dimen/form_margin"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:hint="@string/destination"
                        android:textColor="@color/Black"
                        android:textSize="15sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/search_to"
                        android:layout_marginRight="@dimen/form_margin"
                        android:layout_centerInParent="true"
                        android:id="@+id/progressLoadingTo"
                        android:visibility="invisible"/>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">

                <TextView
                    android:id="@+id/date"
                    android:text="@string/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:textColor="@color/Black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editDate"
                    android:inputType="date"
                    android:layout_width="match_parent"
                    android:hint="@string/date_hint"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:imeOptions="actionNext"
                    android:onClick="dateOnClick" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">

                <TextView
                    android:id="@+id/time"
                    android:text="@string/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:textColor="@color/Black"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/editTime"
                    android:inputType="time"
                    android:layout_width="match_parent"
                    android:hint="@string/time_hint"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:imeOptions="actionNext"
                    android:onClick="timeOnClick"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:gravity="bottom"
                android:paddingRight="2dp">
                <Button
                    android:isScrollContainer="false"
                    android:text="@string/complaint"
                    android:textSize="20sp"
                    android:textColor="@color/White"
                    android:id="@+id/complain_send"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_complaint"/>
            </LinearLayout>
            <EditText
                android:id="@+id/editCurrTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/editCurrDate"
                android:inputType="date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/geoLat"
                android:text="@string/gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/geoLong"
                android:text="@string/gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>