<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_rate_bus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginLeft="@dimen/login_margin"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rate_mode"
                    android:src="@drawable/ic_bus_small"/>
                <ImageButton
                    android:id="@+id/btn_rate_taxi"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/login_margin"
                    android:background="@color/TwitterBlue"
                    android:src="@drawable/ic_taxi_small"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/taxi_comp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/taxi_comp"
                    android:layout_marginTop="@dimen/form_margin"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:textColor="@color/Black"
                    android:textSize="15sp"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <AutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/search_taxi_comp"
                        android:layout_marginTop="@dimen/form_margin_top"
                        android:layout_marginLeft="@dimen/form_margin"
                        android:layout_marginRight="@dimen/form_margin"
                        android:singleLine="true"
                        android:imeOptions="actionNext"
                        android:hint="@string/taxi_comp_hint"
                        android:textSize="14.5sp"/>

                    <ProgressBar
                        style="?android:attr/progressBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/search_taxi_comp"
                        android:layout_marginRight="@dimen/form_margin"
                        android:layout_centerInParent="true"
                        android:id="@+id/progressLoading"
                        android:visibility="visible"/>

                </RelativeLayout>

                <!--<Spinner
                     android:id="@+id/spinner_comp"
                     android:hint="@string/bus_num1"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"/>!-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/taxi_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/bus_num"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/taxi_id"
                    android:layout_width="match_parent"
                    android:hint="@string/taxi_num"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:maxLength="8"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txt_taxi_driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/taxi_driver"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/taxi_driver"
                    android:layout_width="match_parent"
                    android:hint="@string/driver_name"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txt_taxi_license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginLeft="@dimen/form_margin"
                    android:layout_marginRight="@dimen/form_margin"
                    android:text="@string/taxi_license"
                    android:textColor="@color/Black"
                    android:textSize="15sp"
                    />
                <EditText
                    android:id="@+id/taxi_license"
                    android:layout_width="match_parent"
                    android:hint="@string/taxi_license"
                    android:layout_marginTop="@dimen/form_margin_top"
                    android:layout_marginRight="@dimen/form_margin"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtSafety"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/safety"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioSafety"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/form_margin"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatSafety"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodSafety"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadSafety"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtDriver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/driver"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioDriver"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/form_margin"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatDriver"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodDriver"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadDriver"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtClean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/cleanliness"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioClean"
                        android:layout_marginTop="@dimen/form_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatClean"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodClean"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadClean"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtComfort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/comfortness"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioComfort"
                        android:layout_marginTop="@dimen/form_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatComfort"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodComfort"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadComfort"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtPunctual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/punctuality"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioPunctual"
                        android:layout_marginTop="@dimen/form_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatPunctual"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodPunctual"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadPunctual"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:background="@drawable/rect_form_white">
                <TextView
                    android:id="@+id/txtIntegrity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/form_margin"
                    android:text="@string/integrity"
                    android:textSize="15sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="right">
                    <RadioGroup
                        android:id="@+id/radioIntegrity"
                        android:layout_marginTop="@dimen/form_margin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/ibGreatIntegrity"
                            android:button="@drawable/rate_great"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibGoodIntegrity"
                            android:button="@drawable/rate_good"
                            android:layout_height="25dp"
                            android:layout_width="25dp"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"/>
                        <RadioButton
                            android:id="@+id/ibBadIntegrity"
                            android:button="@drawable/rate_bad"
                            android:layout_height="25dp"
                            android:layout_width="25dp"/>
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:gravity="bottom"
        android:paddingRight="2dp">
        <EditText
            android:id="@+id/feedback_remarks"
            android:hint="Remarks..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:imeOptions="actionNext"
            android:textSize="12sp"
            android:layout_weight="4"/>

        <ImageButton
            android:id="@+id/take_gallery"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:background="@drawable/feedback_picture"
            android:layout_weight="0.45"/>
        <ImageButton
            android:id="@+id/take_camera"
            android:layout_width="40dp"
            android:layout_height="26dp"
            android:layout_gravity="bottom"
            android:background="@drawable/feedback_camera"
            android:layout_weight="0.45"/>
    </LinearLayout>
    <EditText
        android:id="@+id/editCurrTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/editCurrDate"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</FrameLayout>