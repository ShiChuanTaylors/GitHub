<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listRelative"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/busCompany"
        android:text=""
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"/>
    <ImageView
        android:layout_below="@id/busCompany"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/rectBad"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/LightGrey">
    </ImageView>
    <ImageView
        android:layout_below="@id/busCompany"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/rectGood"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/LimeGreen">
    </ImageView>
    <TextView
        android:id="@+id/badResult"
        android:layout_below="@id/rectBad"
        android:layout_alignParentRight="true"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/logo_vertical_margin"/>
    <ImageView
        android:layout_below="@id/rectBad"
        android:id="@+id/badSmiley"
        android:layout_toLeftOf="@id/badResult"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rate_sad_color_medium" />
    <TextView
        android:id="@+id/goodResult"
        android:layout_below="@id/rectBad"
        android:layout_toLeftOf="@id/badSmiley"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/logo_vertical_margin"/>
    <ImageView
        android:layout_below="@id/rectBad"
        android:layout_toLeftOf="@id/goodResult"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rate_great_medium"/>
</RelativeLayout>